<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/main_my_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/mybtn"
            android:textColor="#0C6291"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/main_shop_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shopbtn"
            android:textColor="#0C6291"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/main_setting_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/settingbtn"
            android:textColor="#0C6291"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/main_rank_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rankbtn"
            android:textColor="#0C6291"
            android:textStyle="bold"/>


        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            tools:ignore="InvalidId">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stagebackground"
                android:orientation="vertical"
                android:scaleType="fitEnd">

                <Button
                    android:id="@+id/main_stage1_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/main_stage1_9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/m_stagebtn"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/main_training_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/trainingbtn"
            android:textColor="#0C6291"
            android:textStyle="bold"/>

    </FrameLayout>

</LinearLayout>